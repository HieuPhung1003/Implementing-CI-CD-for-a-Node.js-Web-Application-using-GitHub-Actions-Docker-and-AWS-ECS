{{> header}}

<div class="container">
    <div class="glass-pane" style="max-width: 600px; margin: 0 auto;">
        <h2 class="mb-4 text-center">Nhập thông tin sản phẩm</h2>
        <form action="/inventory/add" method="POST">
            <div class="form-group">
                <label class="form-label">Tên sản phẩm:</label>
                <input type="text" name="name" class="form-control" required placeholder="Nhập tên sản phẩm...">
            </div>

            <div class="form-group">
                <label class="form-label">Danh mục:</label>
                <select name="category" class="form-control">
                    <option value="Điện tử">Điện tử</option>
                    <option value="Gia dụng">Gia dụng</option>
                    <option value="Phụ kiện">Phụ kiện</option>
                    <option value="Khác">Khác</option>
                </select>
            </div>

            <div class="form-group">
                <label class="form-label">Số lượng:</label>
                <input type="number" name="quantity" class="form-control" required min="0" placeholder="0">
            </div>

            <div class="form-group">
                <label class="form-label">Giá bán (VNĐ):</label>
                <input type="number" name="price" class="form-control" required min="0" placeholder="0">
            </div>

            <div class="text-center" style="margin-top: 2rem;">
                <button type="submit" class="btn btn-primary" style="width: 100%;">Lưu vào kho</button>
            </div>
        </form>
    </div>
</div>

{{> footer}}